{
    "compilerOptions": {
        "alwaysStrict": true,
        "target": "es5",
        "module": "commonjs",
        "lib": ["dom", "es2015"],
        "jsx": "preserve",
        "jsxFactory": "h",
        "noEmitHelpers": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "preact": ["<rootDir>/node_modules/preact/dist/preact.min.js"],
            "react": ["node_modules/preact/compat"],
            "react-dom": ["node_modules/preact/compat"],
            "create-react-class": ["preact/compat/lib/create-react-class"]
        }
    }
}
